@model Event

<h1>Edit Event</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" name="EventId" value="@Model.EventId" />
    <div>
        <label>Title:</label>
        <input type="text" name="Title" value="@Model.Title" required />
    </div>
    <div>
        <label>Location:</label>
        <input type="text" name="Location" value="@Model.Location" required />
    </div>
    <div>
        <label>Start Date:</label>
        <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
    </div>
    <div>
        <label>Description:</label>
        <textarea name="Description">@Model.Description</textarea>
    </div>
    <button type="submit">Save Changes</button>
</form>
<a href="/Event/Index">Back to List</a>
