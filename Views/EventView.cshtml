@{
    @model IEnumerable<Event>

    <h1>Events</h1>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Location</th>
                <th>Start Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model)
            {
                <tr>
                    <td>@eventItem.Title</td>
                    <td>@eventItem.Location</td>
                    <td>@eventItem.StartDate.ToShortDateString()</td>
                    <td>
                        <a href="/Event/Details/@eventItem.EventId">Details</a>
                        <a href="/Event/Edit/@eventItem.EventId">Edit</a>
                        <a href="/Event/Delete/@eventItem.EventId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
