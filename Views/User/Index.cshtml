@model IEnumerable<EventManagamentSystem.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users - Event Management System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f5f5dc, #e3d7b4);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #5a4e3c;
        }

        .navbar {
            background-color: #d2b48c;
        }

        .navbar a {
            color: #fff !important;
        }

        .jumbotron {
            background: #f8f1e1;
            padding: 2rem;
            border: 1px solid #d2b48c;
            border-radius: 10px;
            animation: fadeIn 1s ease-in-out;
        }

        .jumbotron h1 {
            color: #5a4e3c;
        }

        .table {
            border: 1px solid #c4a484;
            border-radius: 10px;
            overflow: hidden;
        }

        .table thead {
            background-color: #c4a484;
            color: white;
        }

        .table tbody tr:hover {
            background-color: #f0e6d6;
            cursor: pointer;
        }

        .btn {
            transition: background-color 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #a68a63;
            color: #fff;
        }

        .footer {
            background-color: #d2b48c;
            color: #fff;
        }

        .section-header {
            color: #5a4e3c;
            font-weight: bold;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        .action-buttons a {
            margin-right: 0.5rem;
        }

        .icon {
            margin-right: 0.3rem;
        }

        .create-user-btn {
            background: linear-gradient(90deg, #6c757d, #28a745);
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: bold;
        }

        .create-user-btn:hover {
            background: linear-gradient(90deg, #28a745, #6c757d);
            text-decoration: none;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Event Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Category/Index">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Attendee/Index">Attendees</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Feedback/Index">Feedback</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Event/Index">Events</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/User/Index">Users</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="jumbotron text-center mb-4">
            <h1 class="display-4">Users</h1>
            <p class="lead">Manage and explore all registered users in the system.</p>
        </div>

        <div class="mt-4">
            <h2 class="section-header">Users List</h2>
            <table class="table table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Registration Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>@user.CreatedDate.ToString("MMMM dd, yyyy")</td>
                            <td class="action-buttons">
                                <a class="btn btn-sm btn-primary d-flex align-items-center" href="/User/Details/@user.UserId">
                                    <i class="fas fa-info-circle icon"></i> Details
                                </a>
                                <a class="btn btn-sm btn-warning d-flex align-items-center" href="/User/Edit/@user.UserId">
                                    <i class="fas fa-edit icon"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger d-flex align-items-center" href="/User/Delete/@user.UserId">
                                    <i class="fas fa-trash icon"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-5 text-center">
            <a class="create-user-btn" href="/User/Create">
                <i class="fas fa-user-plus icon"></i> Create New User
            </a>
        </div>
    </div>

    <footer class="footer text-center py-3 mt-5">
        <p>&copy; 2023 Event Management System | Your Solution for Event Excellence</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
