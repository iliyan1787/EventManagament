@model Feedback

<h1>Edit Feedback</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" name="FeedbackId" value="@Model.FeedbackId" />
    <div>
        <label>User:</label>
        <select name="UserId">
            @foreach (var user in ViewBag.Users as List<User>)
            {
                <option value="@user.UserId" selected="@((user.UserId == Model.UserId) ? "selected" : null)">@user.Username</option>

            }
        </select>
    </div>
    <div>
        <label>Event:</label>
        <select name="EventId">
            @foreach (var eventItem in ViewBag.Events as List<Event>)
            {
                <option value="@eventItem.EventId" selected="@((eventItem.EventId == Model.EventId) ? "selected" : null)">
                    @eventItem.Title
                </option>

            }
        </select>
    </div>
    <div>
        <label>Comment:</label>
        <textarea name="Comment">@Model.Comment</textarea>
    </div>
    <div>
        <label>Rating:</label>
        <input type="number" name="Rating" value="@Model.Rating" min="1" max="5" required />
    </div>
    <button type="submit">Save Changes</button>
</form>
<a href="/Feedback/Index">Back to List</a>
