@model IEnumerable<EventManagamentSystem.Models.Feedback>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback - Event Management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background: linear-gradient(to right, #f5f5dc, #e3d7b4); /* Light gradient */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #5a4e3c;
        }

        .navbar {
            background-color: #d2b48c;
        }

        .navbar a {
            color: #fff !important;
        }

        .jumbotron {
            background: #f8f1e1;
            padding: 2rem;
            border: 1px solid #d2b48c;
            border-radius: 10px;
            animation: fadeIn 1s ease-in-out;
        }

        .jumbotron h1 {
            color: #5a4e3c;
        }

        .feedback-card {
            background-color: #fff8e7;
            border: 1px solid #d2b48c;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            padding: 1.5rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        }

        .feedback-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .feedback-card h5 {
            color: #5a4e3c;
        }

        .btn {
            transition: background-color 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #a68a63;
            color: #fff;
        }

        .footer {
            background-color: #d2b48c;
            color: #fff;
        }

        .section-header {
            color: #5a4e3c;
            font-weight: bold;
        }


        .rating-stars {
            color: #ffcc00;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="#">Event Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/Home/Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Category/Index">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Attendee/Index">Attendees</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Feedback/Index">Feedback</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Event/Index">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="/User/Index">Users</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="jumbotron text-center mb-4">
            <h1 class="display-4">Your Feedback Matters</h1>
            <p class="lead">We value your opinions and strive to improve your experience.</p>
        </div>

        <div class="mt-4">
            <h2 class="section-header">Feedback List</h2>
            @foreach (var feedback in Model)
            {
                <div class="feedback-card">
                    <h5 class="fw-bold">Feedback by: @feedback.User</h5>
                    <p><strong>Comments:</strong> @feedback.Comment</p>
                    <p>
                        <strong>Rating:</strong> 
                        <span class="rating-stars">
                            @for (var i = 0; i < feedback.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (var i = feedback.Rating; i < 5; i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </span>
                    </p>
                    <p><strong>Date:</strong> @feedback.FeedbackDate.ToString("MMMM dd, yyyy")</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-sm btn-primary d-flex align-items-center" href="/Feedback/Details/@feedback.FeedbackId">
                            <i class="fas fa-info-circle me-1"></i> View Details
                        </a>
                        <a class="btn btn-sm btn-warning d-flex align-items-center" href="/Feedback/Edit/@feedback.FeedbackId">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a class="btn btn-sm btn-danger d-flex align-items-center" href="/Feedback/Delete/@feedback.FeedbackId">
                            <i class="fas fa-trash me-1"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="mt-5 text-center">
            <a class="btn btn-lg btn-success" href="/Feedback/Create">Give Feedback</a>
        </div>
    </div>

    <footer class="footer text-center py-3 mt-5">
        <p>&copy; 2023 Event Management System | Designed for Excellence</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
